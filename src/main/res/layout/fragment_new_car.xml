<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCarFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_car_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your Car's Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_car_model"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your Car's Model"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_owner_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter the Owner of Car"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Owner's Phone number"
        android:inputType="number" />

    <Button
        android:id="@+id/done_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#3F51B5"
        android:gravity="center"
        android:text="Done"
        android:textColor="#FFFFFF" />
</LinearLayout>