<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCarFrag"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_car_name"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/car_new"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10sp"
        android:paddingRight="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:hint="Enter your Car's Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_car_model"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/car_new"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10sp"
        android:paddingRight="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:hint="Enter your Car's Model"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_owner_name"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/user"
        android:layout_width="match_parent"
        android:paddingLeft="10sp"
        android:paddingRight="20sp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:hint="Enter the Owner of Car"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_phone"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/phone"
        android:layout_width="match_parent"
        android:paddingLeft="10sp"
        android:paddingRight="20sp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:hint="Enter Owner's Phone number"
        android:inputType="number" />

    <Button
        android:id="@+id/done_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_round"
        android:gravity="center"
        android:text="Done"
        android:textColor="#FFFFFF" />
</LinearLayout>